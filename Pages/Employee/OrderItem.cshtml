@page
@model TMAWarehouse.Pages.Employee.OrderItemModel
@{
    ViewData["Title"] = "Request Item";
}

<div class="w-75 mx-auto">
    <h1>Request Item</h1>



    <form method="post" enctype="multipart/form-data" asp-page-handler="asp-page-handler">
        <!--Hidden-->
        <input type="hidden" asp-for="@Model.Item.ItemId" />
        <input type="hidden" asp-for="@Model.Item.ItemName" />
        <input type="hidden" asp-for="@Model.Item.MeasurementUnitName" />
        <input type="hidden" asp-for="@Model.Item.MeasurementUnitId" />
        <input type="hidden" asp-for="@Model.Item.MaxQuantity" />
        <input type="hidden" asp-for="@Model.Item.PriceWithoutVat" />


        <!--Item Name-->
        <div class="form-group row mt-1">
            <label for="itemName" class="col-sm-2 col-form-label">Item:</label>
            <div class="col-sm-10">
                @Model.Item.ItemName
            </div>
        </div>

        <!--Price-->
        <div class="form-group row mt-1">
            <label for="price" class="col-sm-2 col-form-label">Price (PLN):</label>
            <div class="col-sm-4">
                @Model.Item.PriceWithoutVat
            </div>
        </div>

        <!--Quantity-->
        <div class="form-group row mt-1">
            <label for="quantity" class="col-sm-2 col-form-label">Quantity:</label>
            <div class="col-sm-4">
                <input class="form-control" asp-for="@Model.Item.OrderQuantity">
            </div>
            <div class="col-sm-5">
                @Model.Item.MeasurementUnitName
            </div>
        </div>
        <div class="form-group row mt-1">
            <div class="col-sm-2"></div>
            <div class="col-sm-4">
                <span class="text-danger" asp-validation-for="@Model.Item.OrderQuantity"></span>
            </div>
            <div class="col-sm-4"></div>
        </div>

        <!--Comment-->
        <div class="form-group row mt-1">
            <label for="itemName" class="col-sm-2 col-form-label">Comment:</label>
            <div class="col-sm-10">
                <textarea class="form-control" rows="4" asp-for="@Model.Item.Comment"></textarea>
            </div>
        </div>
        <div class="form-group row mt-1">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
                <span class="text-danger" asp-validation-for="@Model.Item.Comment"></span>
            </div>
        </div>

        <!--Employee Name-->
        <div class="form-group row mt-1">
            <label for="itemName" class="col-sm-2 col-form-label">Your Name:</label>
            <div class="col-sm-6">
                <input class="form-control" asp-for="@Model.EmployeeName">
            </div>
        </div>

        <!--Errors-->
        <div class="form-group row mt-1">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
                <span class="text-danger" asp-validation-for="@Model.Item"></span>
            </div>
        </div>

        <!--Buttons-->
        <div class="row justify-content-end">
            <div class="col-auto" id="cancel">
                <a class="btn btn-outline-primary m-2" asp-area="" asp-page="/Employee/ItemList">Cancel</a>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary m-2" onclick="showSubmittedMessage()" id="submit" 
                asp-page-handler="SubmitOrder">Submit Order</button>
                <div id="message" style="display: none;" class="alert alert-success mt-2">Request created.</div>
            </div>
        </div>
    </form>
</div>
