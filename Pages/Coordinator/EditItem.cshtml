@page
@model TMAWarehouse.Pages.Coordinator.EditItemModel
@{
    ViewData["Title"] = "Edit Item";
}
<h1>Edit Item</h1>
<div class="w-75 mx-auto">
    <form class="text-right" method="post" asp-page-handler="DeleteItem">
        <button class="btn btn-danger"  type="submit">Delete</button>
    </form>

    <form method="post">
        <div class="form-group row mt-1">
            <label for="itemName" class="col-sm-3 col-form-label">Item:</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="itemName" name="ItemName" value="@Model.Item.ItemName">
            </div>
        </div>
        <div class="form-group row mt-1">
            <label for="itemStatus" class="col-sm-3 col-form-label">Status:</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="itemStatus" name="ItemStatus" value="@Model.Item.ItemStatus">
            </div>
        </div>
        <div class="form-group row mt-1">
            <label for="quantity" class="col-sm-3 col-form-label">Quantity:</label>
            <div class="col-sm-9">
                <input type="number" class="form-control" id="quantity" name="Quantity" value="@Model.Item.Quantity">
            </div>
        </div>
        <div class="form-group row mt-1">
            <label for="price" class="col-sm-3 col-form-label">Price (PLN):</label>
            <div class="col-sm-9">
                <input type="number" class="form-control" id="price" name="Price" value="@Model.Item.PriceWithoutVat">
            </div>
        </div>
        <div class="form-group row mt-1">
            <label for="storageLocation" class="col-sm-3 col-form-label">Storage Location:</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="storageLocation" name="StorageLocation" value="@Model.Item.StorageLocation">
            </div>
        </div>
        <div class="form-group row mt-1">
            <label for="contactPerson" class="col-sm-3 col-form-label">Contact Person:</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="contactPerson" name="ContactPerson" value="@Model.Item.ContactPerson">
            </div>
        </div>
        <div class="form-group row mt-1">
            <label for="itemGroup" class="col-sm-3 col-form-label">Group:</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="itemGroup" name="ItemGroup" value="@Model.Item.ItemGroup">
            </div>
        </div>
        <div class="form-group row mt-1">
            <label for="photo" class="col-sm-3 col-form-label">Photo:</label>
            <div class="col-sm-9">
                <input type="file" class="form-control-file" id="photo" name="Photo">
                @if (Model.Item.PhotoBinary != null && Model.Item.PhotoBinary.Length > 0)
                {
                    <img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Item.PhotoBinary))" alt="Item Photo" style="max-height: 70px;">
                }
                else
                {
                    <img src="~/images/no_photo.jpg" alt="No Photo" style="max-height: 70px;">
                    }
            </div>
        </div>
        <div class="text-right">
            <button type="submit" class="btn btn-primary m-2">Save changes</button>
        </div>
    </form>

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/order.js"></script>
}